<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFriend" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="textTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageTheme">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="displayTheme">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="iconToolbar">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
    </style>

    <style name="tittleToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="cardTheme">
        <item name="cardBackgroundColor">@color/dark_gray</item>
    </style>

    <style name="subCardTheme">
        <item name="android:background">@color/gray2</item>
    </style>

    <style name="mainImageTheme">
        <item name="android:src">@drawable/img_teman_dark</item>
        <item name="android:background">@color/darkOrange</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/darkPurple</item>
    </style>

    <style name="btnAddTheme">
        <item name="android:backgroundTint">@color/gray2</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="searchTheme">
        <item name="android:backgroundTint">@color/gray2</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>